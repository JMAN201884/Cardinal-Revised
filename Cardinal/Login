void New_User()
{
    string reguser,regpass
    system("cls");
    cout <<"Enter Username :" endl;
    cin>>reguser;
    cout <<"Enter Password :" endl;
    cin>>regpass;

    ofstream reg("database.txt", ios::app);
    reg<<reguser'  '<<regpass<<endl;
    cout <<"Registration Complete\n" endl;
    main();
}

