#include <Iostream>

using namespace std;

main()
{
    int choice();
    cout <<"Welcom To the Login" endl;
    cout <<"1.Login" endl;
    cout <<"\n2.Dev_Login" endl
    cout <<"\n3.New_User" endl;
    cout <<"\n4.Dev_Register" endl;
    cout <<"\n5.Forgot_Info" endl;
    cout <<"\n6.Other" endl;
    cout <<"\nEnter Choice " endl;
    cin>>choice;
    switch(choice)
    {
        case 1:
            Login();
            break;
        case 2:
            Dev_Login();
            break;
        case 3:
            New_User();
            break;
        case 4:
            Dev_Register();
            break;
        case 5:
            Forgot_Info();
            break;
        case 6:
            Other();
            break;
        default:
            cout <<"Error Choice Unavaliable" endl;
            main();
    }
}

void Login()
{
    int exists;
    string user,pass,u,p;
    system("cls");
    cout <<"Enter Username" endl;
    cin>>user
    cout <<"Enter Password" endl;
    cin>>pass

    ifstream input("database.txt");

    while(input>>u>>p)
    {
        if(u == user && p == pass)
        {
            exist = 1;
        }
    }
}

